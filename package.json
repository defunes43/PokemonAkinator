{
	"name": "pokemon-akinator",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"generate-json": "npx ts-node --esm scripts/xlsx-to-json.ts",
		"dev": "vite dev",
		"build": "npm run build:capacitor",
		"build:capacitor": "cross-env PUBLIC_BASE_PATH=/ vite build",
		"build:github": "cross-env PUBLIC_BASE_PATH=/PokemonAkinator vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^24.10.0",
		"cross-env": "^10.1.0",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"fs-extra": "^11.3.2",
		"globals": "^16.4.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10",
		"xlsx": "^0.18.5"
	},
	"dependencies": {
		"@capacitor-community/text-to-speech": "^6.1.0",
		"@capacitor/android": "^7.4.4",
		"@capacitor/app": "^7.1.0",
		"@capacitor/cli": "^7.4.4",
		"@capacitor/core": "^7.4.4",
		"knopf.css": "^1.1.2"
	}
}
